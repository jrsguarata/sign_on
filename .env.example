# ===========================================
# CONFIGURACOES DO SISTEMA SIGN_ON
# ===========================================

# Ambiente
NODE_ENV=development

# Backend
PORT=3000
CORS_ORIGIN=http://localhost:5173

# Banco de Dados PostgreSQL
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/authdb

# Redis
REDIS_URL=redis://localhost:6379

# JWT - IMPORTANTE: Altere em producao!
JWT_SECRET=super_secret_jwt_key_change_in_production_123456
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Email (opcional - para notificacoes)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# AWS S3 (opcional - para uploads)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
